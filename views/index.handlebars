<div class="row">
  <center>

    <div class="col-md-4">
      <h3 class="submitFont">Krabby Patties Available</h3>
      <ul>
        {{#each patty}}
        {{#unless devoured}}
        {{> patties/devoured devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
</div>

<div class="col-md-4"></div>

<div class="col-md-4">
  <h3 class="submitFont">Krabby Patties Devoured</h3>"
  <ul>
    {{#each patty}}
    {{#if devoured}}
    {{> patties/devoured devoured=false}}
    {{/if}}
    {{/each}}
  </ul>

</div>
</div>
</center>
</div>
<form action="patty/create" method="POST">

  <div class="row">
    <div class="col-md-3"></div>

    <div class="form-group col-md-6">
      <center><label for="new_pattie" class="submitFont">Request a new Krabby Patty!</label></center>
      <textarea class="form-control" type="text" columns="6" rows="2" id="new_patty required value=" name="patty_name"></textarea>
      </div>

      <div class="col-md-3"></div> 
        </div>

        <center>
          <button id="submit-button" type="submit" class="btn btn-danger">Make my Krabby Patty!</button>
        </center>

        </form>